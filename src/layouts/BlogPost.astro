---
import type { CollectionEntry } from "astro:content";
import BaseHead from "$components/BaseHead.astro";
import Header from "$components/Header.astro";
import Footer from "$components/Footer.astro";
import FormattedDate from "$components/FormattedDate.astro";
import PostClick from "$components/PostClick.astro";
import Comment from "$components/Comment.astro";
import { ENABLE_CLICK, CLICK_INFO, ENABLE_COMMENT } from "$consts";

type Props = CollectionEntry<"blog">["data"] & {
  id: string;
};

const { id, title, desc, date, updatedDate } = Astro.props;
const click: number =
  (ENABLE_CLICK && CLICK_INFO.find((click) => click.id === id)?.click) || 0;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={desc} />
    <style is:global>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .prose,
      .comment-region {
        width: 720px;
        max-width: calc(100% - 2em);
        color: var(--main-color);
        margin: auto;
      }
      .prose {
        padding: 1em;
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date,
      .click-count {
        margin-bottom: 0.5em;
        color: rgb(var(--date-color));
      }
      .last-updated-on,
      .click-count {
        font-style: italic;
      }
    </style>
    {ENABLE_CLICK && <PostClick id={id} />}
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={date} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate || date} />
                  </div>
                )
              }
            </div>
            {
              ENABLE_CLICK && (
                <div class="click-count">
                  {click}
                  {click === 1 ? "click" : "clicks"}
                </div>
              )
            }
            <h1>{title}</h1>
            <hr />
          </div>
          <slot />
        </div>
      </article>
      {ENABLE_COMMENT && <Comment id={id} />}
    </main>
    <Footer />
  </body>
</html>
